{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@dari/types": ["packages/dari-types/src"],
      "@dari/prisma": ["packages/dari-types/client"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "ES2021",
    "lib": ["ESNext"],
    "composite": true
  }
}
