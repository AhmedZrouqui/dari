{
  "name": "dari-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"  
  ],
  "scripts": {
    "build:packages": "npm run build --workspace=packages/dari-types",
    "build:apps": "npm run build --workspaces --if-present",
    "build": "npm run build:packages && npm run build:apps",
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "dev:backend": "npm run start:dev --workspace=apps/backend",
    "clean": "rm -rf apps/*/dist apps/*/.next packages/*/dist"
  }
}